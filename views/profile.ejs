<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinterest | Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="shortcut icon" href="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" type="image/x-icon">

</head>

<body>
    <div class="bg-gray-100 min-h-screen">
        <!-- Profile Header -->
        <div class="bg-white shadow-md">
            <div class="max-w-6xl mx-auto p-8 flex items-center">
                <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
                    <input type="file" name="image">
                </form>
                <img src="/images/uploads/<%= user.dp %>" alt="Profile Image"
                    class="w-36 h-36 rounded-full mr-8 object-cover border-gray-200 border-2">
                <div>
                    <h2 class="text-3xl font-bold">
                        <%= user.fullname %>
                    </h2>
                    <h2 class="text-gray-600 mt-2 text-base">@<%= user.username %>
                    </h2>
                    <p class="text-gray-600 mt-2 text-base">X boards · X followers · X following</p>
                    <button id="uploadbutt"
                        class="mt-4 px-5 py-2 bg-red-600 text-white rounded-full hover:bg-red-700 text-base">
                        Edit Profile
                    </button>
                </div>
            </div>
            <div class="border-t border-gray-200 mt-4">
                <div class="max-w-7xl mx-auto flex items-center justify-between py-4">
                    <div class="flex space-x-9">
                        <a href="/feed"
                            class="px-5 py-2 bg-gray-100 text-gray-600 rounded-full hover:bg-gray-200 text-base">Feed</a>
                    </div>
                    <a href="/add" class="px-5 py-2 bg-gray-100 text-gray-600 rounded-full hover:bg-gray-200 text-base">
                        + Add New Post
                    </a>
                    <a href="/logout" class="px-5 py-2 bg-red-600 text-white rounded-full hover:bg-red-700 text-base">
                        Logout
                    </a>
                </div>
            </div>
        </div>

        <!-- Pins Section -->
        <div class="max-w-7xl mx-auto mt-8 px-6 py-4">
            <h3 class="text-2xl font-bold mb-4">Created Pins</h3>
            <div class="flex flex-wrap gap-6 items-start">
                <!-- Pin Item -->
                <% user.posts.forEach(function(post) { %>
                    <div
                        class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300 w-72">
                        <img src="/images/uploads/<%= post.image %>" alt="Pin Image" class="w-full object-contain">
                        <div class="px-3 py-2">
                            <h1 class="text-base font-semibold">
                                <%= post.imageText %>
                            </h1>
                            <p class="text-gray-800 text-sm mt-1">
                                <%= post.description %>
                            </p>
                        </div>
                    </div>
                    <% }); %>
                        <!-- Repeat Pin Item for each pin -->
                        <!-- More Pin Items... -->
            </div>
        </div>
    </div>
    <script>
        document.querySelector("#uploadbutt").addEventListener("click", function () {
            document.querySelector("#uploadform input").click()
        })

        document.querySelector("#uploadform input").addEventListener("change", function () {
            document.querySelector("#uploadform").submit()
        })
    </script>
</body>

</html>